<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>TO-DO LIST</title>
    <link rel="stylesheet" href="/home.css" />
  </head>
  <body>
    <h1>TO DO LIST</h1>
    <div class="todo-container">
      <ul class="task-list">
        <% for (let i = 0; i < todolist.length; i++) { %>
        <li>
          <%= todolist[i].task %>
          <button
            class="edit-task"
            onclick="location.href='/home/edittask/<%= todolist[i].id %>'"
          >
            EDIT
          </button>
        </li>
        <% } %>
      </ul>
    </div>
    <button class="add-task" onclick="location.href='/home/addtask'">
      ADD TASK
    </button>
  </body>
</html>
